{
    "openapi": "3.0.0",
    "info": {
        "title": "Michael Scott Quotes",
        "version": "1.0.0",
        "description": "A HTTP API for retrieving Michael Scott quotes",
        "contact": {
            "name": "Adam Pallin",
            "email": "adamrpallin@gmail.com",
        },
        "license": {
            "name": "MIT License",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "https://michael-scott-api.herokuapp.com/v1"
        }
    ],
    "paths": {
        "/quotes": {
            "get": {
                "description": "Returns a single Michael Scott quote wrapped in an array",
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/success"
                    }
                }
            }
        },
        "/quotes/{count}": {
            "get": {
                "description": "Returns {count} quotes in an array",
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/success"
                    }
                },
                "parameters": [
                    {
                        "name": "count",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ]
            }
        }
    },
    "components": {
        "responses": {
            "success": {
                "description": "OK",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}